<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:paddingEnd="10dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:layout_height="wrap_content"
    style="?android:listSeparatorTextViewStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_assemblies"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_shortcut_account_balance_wallet" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_assemblie_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/image_assemblies"
                android:paddingBottom="16dp"
                android:paddingLeft="2dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:text="Ensamble"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tag_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/image_assemblies"
                    android:paddingBottom="16dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp"
                    android:text="Precio: $" />

                <TextView
                    android:id="@+id/txt_price_emsamblie_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/image_assemblies"
                    android:paddingBottom="16dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp"
                    android:text="1000.00"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tag_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/image_assemblies"
                    android:paddingBottom="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp"
                    android:text="Cant:" />

                <TextView
                    android:id="@+id/txt_qty_emsamblie_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/image_assemblies"
                    android:paddingBottom="16dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp"
                    android:text="1"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>