<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
   android:background="@color/cardview_light_background"
    android:layout_height="match_parent"
    tools:context="com.azore.compustore.OrdenesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:weightSum="1">


        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tag_count"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/darkblue"
            android:text="Ordenes en el mes:"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/txt_count"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:textSize="20dp"
            android:textColor="@color/darkblue"
            android:text="1"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tag_gain"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/darkblue"
            android:text="Ganancia: $"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/txt_gain"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:textSize="20dp"
            android:textColor="@color/darkblue"
            android:text="10000.00"
            android:layout_height="wrap_content" />

    </LinearLayout>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_orders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_date_initial"
        tools:layout_editor_absoluteX="8dp">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>
