<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:elevation="3dp"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/id_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/thumbnail"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:text="Enero"
                android:textColor="@color/darkblue"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_title"
                android:paddingBottom="5dp"
                android:paddingLeft="0dp"
                android:paddingRight="1dp"
                android:text="Ganancia: $"
                android:textColor="@color/blue"
                android:textSize="15dp" />


            <ImageView
                android:id="@+id/overflow"
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:layout_above="@+id/count"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_action_format_list_bulleted" />

            <TextView
                android:id="@+id/txt_ganancia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="10000.00"
                android:textColor="@color/blue"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_alignBaseline="@+id/count"
                android:layout_alignBottom="@+id/count"
                android:layout_alignRight="@+id/txt_vendidas"
                android:layout_alignEnd="@+id/txt_vendidas" />


            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/count"
                android:text="Ordenes Vendidas: "
                android:textColor="@color/blue"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_vendidas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/count"
                android:layout_toEndOf="@+id/textView9"
                android:layout_toRightOf="@+id/textView9"
                android:text="10"
                android:textColor="@color/blue"
                android:textSize="15dp"
                android:textStyle="bold" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>