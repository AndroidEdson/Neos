<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.azore.compustore.ReportesActivity"
    android:weightSum="1">


        <ImageButton
            android:id="@+id/btn_simulador"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignLeft="@+id/btn_missing_product"
            android:layout_alignStart="@+id/btn_missing_product"
            android:layout_below="@+id/btn_missing_product"
            android:background="@color/white"
            android:layout_marginTop="31dp"
            android:src="@drawable/ic_remove_red_eye" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/txt_tag_missing_product"
            android:layout_alignStart="@+id/txt_tag_missing_product"
            android:layout_alignTop="@+id/btn_more_sales"
            android:layout_marginTop="33dp"
            android:text="Resumen de Ventas "
            android:textColor="@color/darkblue"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_missing_product"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_warning_products_missing"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txt_tag_missing_product"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/btn_missing_product"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="38dp"
            android:layout_toEndOf="@+id/btn_missing_product"
            android:layout_toRightOf="@+id/btn_missing_product"
            android:textStyle="bold"
            android:textColor="@color/darkred"
            android:text="Lista de Productos faltantes" />

        <ImageButton
            android:id="@+id/btn_more_sales"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_calendar"
            android:layout_marginTop="37dp"
            android:layout_below="@+id/btn_simulador"
            android:layout_alignLeft="@+id/btn_simulador"
            android:background="@color/white"
            android:layout_alignStart="@+id/btn_simulador" />

        <TextView
            android:id="@+id/txt_tag_missing_product2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_above="@+id/btn_more_sales"
            android:layout_alignLeft="@+id/txt_tag_missing_product"
            android:layout_alignStart="@+id/txt_tag_missing_product"
            android:layout_marginBottom="22dp"
            android:text="Simulador de confirmación de órdenes"
            android:textColor="@color/purple"
            android:textStyle="bold" />


</RelativeLayout>
