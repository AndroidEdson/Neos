<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.azore.compustore.ReportesActivity"
    android:weightSum="1">




        <ImageButton
            android:id="@+id/btn_simulador"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignLeft="@+id/btn_missing_product"
            android:layout_alignStart="@+id/btn_missing_product"
            android:layout_below="@+id/btn_missing_product"
            android:background="@color/white"
            android:src="@drawable/ic_remove_red_eye"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_alignLeft="@+id/txt_tag_missing_product"
            android:layout_alignStart="@+id/txt_tag_missing_product"
            android:layout_alignTop="@+id/btn_more_sales"
            android:text="Resumen de Ventas "
            android:textColor="@color/darkblue"
            android:textStyle="bold"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/btn_more_sales"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/btn_more_sales"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_more_sales"
            app:layout_constraintHorizontal_bias="0.433" />

        <ImageButton
            android:id="@+id/btn_missing_product"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_warning_products_missing"
            android:layout_marginStart="50dp"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:layout_constraintTop_toTopOf="@+id/btn_more_sales"
            android:layout_marginTop="-1dp"
            android:layout_marginLeft="30dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/txt_tag_missing_product"
            android:layout_width="87dp"
            android:layout_height="58dp"
            android:layout_alignTop="@+id/btn_missing_product"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/btn_missing_product"
            android:layout_toRightOf="@+id/btn_missing_product"
            android:text="Lista de Productos faltantes"
            android:textAlignment="center"
            android:textColor="@color/darkred"
            android:textStyle="bold"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/btn_missing_product"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_missing_product"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/btn_missing_product" />

        <ImageButton
            android:id="@+id/btn_more_sales"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_calendar"
            android:layout_below="@+id/btn_simulador"
            android:layout_alignLeft="@+id/btn_simulador"
            android:background="@color/white"
            android:layout_alignStart="@+id/btn_simulador"
            app:layout_constraintTop_toTopOf="@+id/btn_simulador"
            android:layout_marginTop="0dp"
            android:layout_marginRight="50dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/txt_tag_missing_product2"
            android:layout_width="156dp"
            android:layout_height="78dp"
            android:layout_above="@+id/btn_more_sales"
            android:layout_alignLeft="@+id/txt_tag_missing_product"
            android:layout_alignStart="@+id/txt_tag_missing_product"
            android:text="Simulador de confirmación de órdenes"
            android:textAlignment="center"
            android:textColor="@color/purple"
            android:textStyle="bold"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/btn_simulador"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/btn_simulador"
            app:layout_constraintHorizontal_bias="0.589"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_simulador" />


</android.support.constraint.ConstraintLayout>
